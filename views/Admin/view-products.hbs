<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto" >Add Products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Catagory</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td> {{this.catagory}} </td>
                    <td> {{this.desc}} </td>
                    <td> <img style="width: 50px; height: 50px; " src="{{this.image}}" alt="image not avail" /> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>