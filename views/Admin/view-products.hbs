<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto" >Add Products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Catagory</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td> {{this.Catagory}} </td>
                    <td> {{this.Description}} </td>
                    <td> <img style="width: 50px; height: 50px; " src="/product-images/{{this._id}}.jpg" alt="image not avail" /> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>